{
  "manifest_version": 3,
  "name": "Research Assistant",
  "version": "1.0",
  "description": "AI-powered Research Assistant for summarizing text",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_title": "Open Research Assistant"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "<all_urls>"
  ]
}